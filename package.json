{
  "name": "@bardsballad/verse",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.1.8",
  "description": "A custom typed scripting language for BardsBallad with Monaco editor integration",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./monaco": {
      "types": "./dist/monaco/index.d.ts",
      "import": "./dist/monaco/index.mjs",
      "require": "./dist/monaco/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "playground:dev": "vite playground --open --config ./vite.config.ts",
    "playground:build": "vite build playground --config ./vite.config.ts",
    "playground:preview": "vite preview playground --config ./vite.config.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build && bun test"
  },
  "keywords": [
    "ttrpg",
    "scripting",
    "language",
    "compiler",
    "monaco",
    "typescript",
    "type-inference",
    "rpg",
    "dnd",
    "character-sheet"
  ],
  "author": "KingCosmic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BardsBallad/Verse.git"
  },
  "bugs": {
    "url": "https://github.com/BardsBallad/Verse/issues"
  },
  "homepage": "https://github.com/BardsBallad/Verse#readme",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vite": "^5.0.5",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "monaco-editor": "^0.54.0",
    "quickjs-emscripten": "^0.31.0",
    "vite-plugin-monaco-editor": "^1.1.0"
  },
  "peerDependencies": {
    "monaco-editor": "^0.45.0"
  },
  "peerDependenciesMeta": {
    "monaco-editor": {
      "optional": true
    }
  }
}